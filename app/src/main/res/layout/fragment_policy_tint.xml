<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/exit_white_bg">

    <TextView
        android:id="@+id/tv_tint_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/t20dp"
        android:text="隐私政策提醒"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_16"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/t10dp"
        android:layout_marginTop="@dimen/t20dp"
        android:layout_marginRight="@dimen/t10dp"
        android:lineSpacingExtra="@dimen/t5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_tint_title" />


    <TextView
        android:id="@+id/tv_agree_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginLeft="@dimen/distance_15"
        android:layout_marginTop="@dimen/t30dp"
        android:layout_marginRight="@dimen/distance_15"
        android:background="@drawable/red_rect_bg"
        android:gravity="center"
        android:text="同意，继续使用"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/tv_content" />

    <TextView
        android:id="@+id/tv_exit_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginLeft="@dimen/distance_15"
        android:layout_marginTop="@dimen/t15dp"
        android:layout_marginRight="@dimen/distance_15"
        android:layout_marginBottom="@dimen/distance_15"
        android:background="@drawable/gray_solid_rect_bg"
        android:gravity="center"
        android:text="不同意，退出APP"
        android:textColor="@color/gray_999"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_agree_btn" />
</androidx.constraintlayout.widget.ConstraintLayout>