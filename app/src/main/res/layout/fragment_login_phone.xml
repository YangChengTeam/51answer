<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/t20dp"
    android:elevation="3dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/et_account"
            style="@style/LoginEditTextInputStyle"
            android:layout_weight="1"
            android:hint="请输入手机号"
            android:inputType="number|textMultiLine"
            android:maxLength="11" />

        <ImageView
            android:id="@+id/iv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="5dp"
            android:layout_weight="0"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:src="@mipmap/ic_login_calen"
            android:visibility="invisible" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/t1dp"
        android:layout_marginTop="@dimen/t10dp"
        android:background="@color/gray_dddddd" />

    <TextView
        android:id="@+id/tv_next"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="@dimen/t15dp"
        android:background="@drawable/login_btn_bg_normal"
        android:gravity="center"
        android:text="@string/next"
        android:textColor="@color/white"
        android:textSize="@dimen/t16sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/t10dp"
        android:gravity="center"
        android:text="未注册手机号验证后自动登录"
        android:textColor="@color/gray_999"
        android:textSize="@dimen/t12sp" />
</LinearLayout>