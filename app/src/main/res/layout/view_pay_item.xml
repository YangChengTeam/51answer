<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/pay_way_bg_selector">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/t14dp"
        android:layout_marginTop="@dimen/t16dp"
        android:text="搜题包-31天/600次"
        android:textColor="@color/black_222"
        android:textSize="@dimen/t15sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tv_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/t7dp"
        android:background="@drawable/pay_item_tag_bg"
        android:paddingLeft="@dimen/t5dp"
        android:paddingRight="@dimen/t5dp"
        android:text="爆抢"
        android:textColor="@color/white"
        android:textSize="@dimen/t12sp"
        app:layout_constraintBottom_toBottomOf="@id/tv_title"
        app:layout_constraintLeft_toRightOf="@id/tv_title"
        app:layout_constraintTop_toTopOf="@id/tv_title" />


    <TextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/t15dp"
        android:text="现价:29.90元"
        android:textColor="@color/pay_item_selector"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_title" />

    <ImageView
        android:id="@+id/iv_sel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/sel"
        android:visibility="gone"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_desc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/t14dp"
        android:layout_marginTop="@dimen/t10dp"
        android:layout_marginEnd="@dimen/t5dp"
        android:layout_marginBottom="@dimen/t14dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="只用于搜题看答案，不支持题库练习"
        app:layout_constraintRight_toLeftOf="@id/tv_origin_price"
        android:textColor="@color/gray_999"
        android:textSize="@dimen/t13sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_title" />

    <TextView
        android:id="@+id/tv_origin_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/t10dp"
        android:layout_marginEnd="@dimen/t14dp"
        android:layout_marginBottom="@dimen/t14dp"
        android:text="原价99.90元"
        android:textColor="@color/gray_999"
        android:textSize="@dimen/t12sp"
        app:layout_constraintBottom_toBottomOf="@id/tv_desc"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_desc" />
</androidx.constraintlayout.widget.ConstraintLayout>