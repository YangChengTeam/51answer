<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/t95dp"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_answer"
        android:layout_width="@dimen/book_width"
        android:layout_height="@dimen/book_height"
        android:layout_marginTop="@dimen/t5dp"
        android:src="@mipmap/add_answer" />

    <ImageView
        android:id="@+id/iv_delete_answer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:src="@mipmap/answer_delete" />

</FrameLayout>