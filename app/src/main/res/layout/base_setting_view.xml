<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/distance_10">

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:src="@mipmap/setting_wx" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/distance_10"
        android:layout_toRightOf="@id/iv_icon"
        android:text="@string/setting"
        android:textColor="@color/black"
        android:textSize="@dimen/text_12" />


    <ImageView
        android:id="@+id/iv_right_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@mipmap/right_arrow" />

    <FrameLayout
        android:id="@+id/fl_extra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/iv_right_arrow"
        android:visibility="gone">


        <ImageView
            android:id="@+id/iv_avator"
            android:layout_width="@dimen/distance_30"
            android:layout_height="@dimen/distance_30"
            android:layout_marginRight="@dimen/distance_10" />

        <TextView
            android:id="@+id/tv_extra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/distance_5"
            android:gravity="center"
            android:paddingLeft="@dimen/distance_5"
            tools:text="3.89MB" />

    </FrameLayout>
</RelativeLayout>