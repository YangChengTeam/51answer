<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Main" parent="AppTheme">

    </style>

    <!--登录输入框-->
    <style name="LoginEditTextInputStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textColor">@color/pink_dea8a8</item>
        <item name="android:textColorHint">@color/pink_dea8a8</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@null</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="ToolBar">
        <item name="android:gravity">center</item>
    </style>


    <style name="share_anim">
        <item name="android:windowEnterAnimation">@anim/tup</item>
        <item name="android:windowExitAnimation">@anim/tdown</item>
    </style>

    <declare-styleable name="StateView">
        <attr name="gravity" format="enum">
            <enum name="Top" value="1" />
            <enum name="Left" value="2" />
            <enum name="Right" value="3" />
            <enum name="Bottom" value="4" />
            <enum name="Center" value="5" />
        </attr>

    </declare-styleable>

</resources>
